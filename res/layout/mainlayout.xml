<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/hello_world" />
    <!-- android:apiKey="AIzaSyBzH3WaOhPUlCFc8eiNGn2LRqPufivD7v0" /> -->


    <!-- <fragment -->
    <!-- class="com.google.android.gms.maps.SupportMapFragment" -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="match_parent" -->
    <!-- android:id="@+id/mapview1" -->
    <!-- /> -->

    <com.google.android.maps.MapView
        android:id="@+id/mapview1"
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:apiKey="0geNYC_khB1PwZsrQqCSoM04Y0a-bEwr4X501NA"
        android:clickable="true"
        android:enabled="true" >

    </com.google.android.maps.MapView>

    <Button
        android:id="@+id/button1"
        style="@style/AppBaseTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mapview1"
        android:layout_alignParentLeft="true"
        android:text="@string/connection"
        android:textSize="8dp" />

    <Button
        android:id="@+id/unconnection"
        style="@style/AppBaseTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button1"
        android:text="@string/unconnection"
        android:textSize="8dp" />

    <Button
        android:id="@+id/buttonFollowers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/buttonLocateMe"
        android:text="Followers"
        android:textSize="8dp" />

    <Button
        android:id="@+id/buttonLocateMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/unconnection"
        android:text="Locate Me"
        android:textSize="8dp" />

</RelativeLayout>